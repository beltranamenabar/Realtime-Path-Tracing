all: clean raytrace
	

raytrace: raytrace.o display.o Makefile vec.h camera.h geom.h display.h geomfunc.h
	g++  -DSMALLPT_GPU -o raytrace raytrace.cpp display.cpp -std=c++11 -Wall -lglut -lGLU -lOpenCL -lGL 

raytrace.o: raytrace.cpp display.h geom.h
	g++ -g -c raytrace.cpp

display.o: display.h geom.h
	g++ -g -c display.cpp 
clean:
	rm -f *.o raytrace
